<div class="form-holder">
  <h4>Форма обратной связи</h4>
  <form action="" class="form callback-form">
    <div class="input-group">
      <input id="name"
             class="input"
             name="name"
             type="text"
             minlength="1"
             maxlength="16"
             required>
      <label for="name" class="label-placeholder">Контактное лицо</label>
    </div>
    <div class="input-group">
      <input class="input js-mask-phone"
             id="phone"
             name="phone"
             type="tel"
             required>
      <label for="phone" class="label-placeholder">Мобильный телефон</label>
      <button class="clear-input-button js-clear-button" type="button"></button>
    </div>
    <textarea class="textarea" cols="16" rows="5" placeholder="Тектовое поле"></textarea>
    <button class="btn btn-primary btn-lg" type="button"> Отправить</button>
  </form>
</div>
