{% macro createCard(pathImg='', altText='alt', title='', desc='null') %}
  <div class="infographics-image-holder">
    <img src="{{ pathImg }}"
         alt="{{ altText }}">
  </div>
  <div class="infographics-content">
    <h4>{{ title }}</h4>
    {% if desc != 'null' %}
      <p>{{ desc }}</p>
    {% endif %}
  </div>
{% endmacro %}
